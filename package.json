    "@typescript/native-preview": "7.0.0-dev.20250616.1",
    "@vitest/coverage-v8": "^3.2.3",
    "oxlint": "^1.1.0",
    "tsdown": "^0.12.7",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
